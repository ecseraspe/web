@model List<Youffer.Web.Resources.ViewModel.WebMessageModel>
@{
    ViewBag.Title = "All Messages";
}
@{Youffer.Web.Resources.ViewModel.WebCompanyDashboardModel companyModel = @Session["companyModel"] as Youffer.Web.Resources.ViewModel.WebCompanyDashboardModel;}
<div class="large-box setting-page" style="border: 0; background: #f7f7f7;">
    <div class="large-box-data" id="" style="padding: 15px; background: #f7f7f7;">
        <div class="dash-container search-filter">
            <div class="row">
                <div class="company-pic">
                    <div id="edit-pic" class="edit-pic" style="padding:64px;" onclick="window.location.href = '@Url.Action("Settings","Client")'">
                        <img src="data:image/png;base64," style="width:26px; height:25px;" />
                    </div>
                    <div class="img-CompanyLogo" style="background: url(@companyModel.CompanyLogo) center no-repeat; background-size: cover;"></div>
                    <input type="file" id="file-CompanyImage" style="display:none;" />
                </div>
                <div class="company-name">@companyModel.CompanyName</div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="AllMessageForPushNotification" value="1" />
<div class="large-box">
    <div>
        <div class="box-heading">
            <span>Messages</span>
            <span style="float: right; cursor: pointer;" onclick="ShowBulkMessagePopUp();">+ Send Mass Email</span>
        </div>
        <div style="clear: both;"></div>
        <div class="large-box-data" style="height:auto;padding:0;">
            <div class="dash-container">
                @{
                    if (Model.Any())
                    {
                        <div id="divAllMessagesScroll" style="max-height:500px; overflow:auto;">
                            <table id="tblAllMessages" class="tableCls">
                                <thead>
                                    <tr>
                                        <th>Sender</th>
                                        <th>Message</th>
                                        <th>Date</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Partial("_AllMessageContent", Model)
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <center><h2>No messages to display <br /> Use Youffer and get more clients.</h2></center>
                    }
                }
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#divAllMessagesScroll").scroll(function () {
            if ($(this).scrollTop() + $(this).innerHeight() >= $(this)[0].scrollHeight) {
                GetMoreAllMessage(-1, -1, BindAllMessage, false, false);
            }
        });

        $("#tblAllMessages").on("click", ".messageHistory td", function () {
            if (!$(this).hasClass("deleteMessage")) {
                var row = $(this).parent("tr")
                if (row != undefined && row.length > 0) {
                    var wishlist = $(row).data("wishlistid");
                    if (wishlist != undefined && wishlist.length > 0) {
                        ShowMessageHistory(wishlist);
                    }
                }
            }
        });
    });
</script>

