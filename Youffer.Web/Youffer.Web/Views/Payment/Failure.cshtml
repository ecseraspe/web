@{
    ViewBag.Title = "Failure";
    Layout = "~/Views/Shared/_YoufferLayout.cshtml";
}

<div class="page-container container">
    <h2>@ViewBag.Title</h2>
    <p>You will be redirected to HomePage in 10 seconds, if not then click <a href="/">here...</a></p>
</div>
<script type="text/javascript">
    function formatPage() {
        if (companyId) {
            jQuery('.page-container.container').css("width", "1024px");
            jQuery('.page-container.container').css("padding-top", "0");
        }
    }
    window.onload = function () {
        setTimeout(function () {
            location.pathname = "/"
        }, 10000);
        formatPage();
    }
    formatPage();
</script>
