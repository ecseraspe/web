@model Youffer.Resources.Models.ForgotPassword
@{
    ViewBag.Title = "Youffer";
    Layout = "~/Views/Shared/_YoufferLayout.cshtml";
}
<style>
    #ConfirmPassworderr {
        color: red;
        margin: 0;
        padding: 0;
        margin-top: 15px;
        height: 20px;
        margin-bottom: 20px;
    }

    .register-img {
        position: absolute;
        width: 20px;
        margin-left: 15px;
    }
</style>
<div class="page-container">
    <div class="newPassword">
        <div id="forgotPassword" style="text-align: justify; margin: 0 auto; width: 400px;">
            <div id="ConfirmPassworderr">
                @{
                    if (string.IsNullOrEmpty(ViewBag.Status))
                    {
                        <span>@ViewBag.Status</span>
                    }
                }
            </div>
            @using (Html.BeginForm("NewPassword", "Account", new { }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div>
                    <div style="margin-bottom: 20px;">
                        @Html.LabelFor(m => m.NewPassword)
                        <div class="register-img-Div">
                            <img src="data:image/png;base64," style="margin-top: 14px;" class="register-img" />
                        </div>
                        @Html.PasswordFor(m => m.NewPassword, new { id = "register-input", @class = "text txtPassword", onkeypress = "clearErrMsg();" })
                    </div>
                    <div style="margin-bottom: 20px;">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        <div class="register-img-Div">
                            <img src="data:image/png;base64," style="margin-top: 14px;" class="register-img" />
                        </div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { id = "register-input", @class = "text txtConfirmPassword", onkeypress = "clearErrMsg();" })
                    </div>
                    <div style="margin-bottom: 20px;">
                        @Html.HiddenFor(m => m.ResetPwdGuid)
                        <input type="submit" class="buy-button" value="Submit" onclick="return validateRegister();"/>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function validateRegister() {
        var error = true;
        $('#ConfirmPassworderr').html('');
        if ($('.txtPassword').val().trim().length < 0) {
            $('#ConfirmPassworderr').append("Password is required.<br />");
            error = false;
        }
            //else if ($('.txtPassword').val().trim().length > 12) {
            //    $('#ConfirmPassworderr').append("Password length should not be more than 12.<br />");
            //    error = false;
            //}
        else if ($('.txtPassword').val().trim() != $('.txtConfirmPassword').val().trim()) {
            $('#ConfirmPassworderr').append("The password and confirmation password do not match.<br />");
            error = false;
        }
        else
            error = true;

        if (error == false) {
            $('.txtPassword').val('');
            $('.txtConfirmPassword').val('');
            return false;
        }
        else
            return true;
    }
    function clearErrMsg() {
        $("#ConfirmPassworderr").html('');
    }
</script>
